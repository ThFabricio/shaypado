<%= form_with(model: instrutor) do |form| %>
  <% if instrutor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(instrutor.errors.count, "error") %> prohibited this instrutor from being saved:</h2>

      <ul>
        <% instrutor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :cpf, style: "display: block" %>
    <%= form.text_field :cpf %>
  </div>

  <div>
    <%= form.label :data_nascimento, style: "display: block" %>
    <%= form.date_field :data_nascimento %>
  </div>

  <div>
    <%= form.label :contato, style: "display: block" %>
    <%= form.text_field :contato %>
  </div>

  <%= form.fields_for :endereco do |endereco_form| %>
    <div>
      <%= endereco_form.label :logradouro, display: "block" %>
      <%= endereco_form.text_field :logradouro %>
    </div>

    <div>
      <%= endereco_form.label :numero, display: "block" %>
      <%= endereco_form.text_field :numero %>
    </div>

    <div>
      <%= endereco_form.label :complemento, display: "block" %>
      <%= endereco_form.text_field :complemento %>
    </div>

    <div>
      <%= endereco_form.label :cep, display: "block" %>
      <%= endereco_form.text_field :cep %>
    </div>

    <div>
      <%= endereco_form.label :bairro, display: "block" %>
      <%= endereco_form.text_field :bairro %>
    </div>

    <div>
      <%= endereco_form.label :cidade, display: "block" %>
      <%= endereco_form.text_field :cidade %>
    </div>
  <%end %>

  <div class="col-md-6 form-group">
    <%= form.label :academium_id, "Academia", style: "display: block" %>
    <%= form.select :academium_id, options_for_select(Academium.all.ids) %>
  </div>

  <div>
    <%= form.label :horario_trabalho, style: "display: block" %>
    <%= form.time_field :horario_trabalho %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.text_field :password %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
